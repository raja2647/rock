<!DOCTYPE html>
<html lang="en">
    {{> header  }}
<body>
    {{> navbar  }}
    <div class="container-fluid">
       <div class="header">
        <h5>Registration</h5>
       {{#if msg}}
       <p class="{{msg_type}}">{{msg}}</p>
       {{/if}}
       </div>
       <form action="/auth/register" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">UserName</label>
    <input class="form-control" id="name" name="name" type="text" placeholder="Enter Username" />
  </div>
  <div class="mb-3">
    <label for="e-mail" class="form-label">E-mail</label>
    <input class="form-control" id="e-mail" name="email" type="email" placeholder="Enter e-mail" />
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" />
  </div>
  <div class="mb-3">
    <label for="confirm-password" class="form-label">Confirm Password</label>
    <input type="password" class="form-control" id="confirm-password" name="confirm_password" placeholder="Enter password" />
  </div>
  <button type="submit" class="btn btn-primary mt-4" id="loginbtn">Register</button>
  <p class="mt-3">Already a member? <a href="/login">Login now</a></p>
</form>
   </div>
    
    <script src="/script/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
    